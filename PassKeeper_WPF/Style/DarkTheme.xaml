<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PassKeeper_WPF.Style">

    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#1C1C1E"/>
    <SolidColorBrush x:Key="MainWindowBackgroundColor" Color="#171717"/>
    <SolidColorBrush x:Key="ForegroundColor" Color="#FEFEFE"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="#DEA03B"/>
    <SolidColorBrush x:Key="AccentColor" Color="#E2A437"/>


    <LinearGradientBrush x:Key="LoginWindowBackgroundGradient" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#171717" Offset="0.0"/>
        <GradientStop Color="#171717" Offset="0.1"/>
    </LinearGradientBrush>
</ResourceDictionary>