<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PassKeeper_WPF"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="White"/>
    <SolidColorBrush x:Key="MainWindowBackgroundColor" Color="#eeeeee"/>
    <SolidColorBrush x:Key="ForegroundColor" Color="#5C5C60"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="#FE224C"/>
    <SolidColorBrush x:Key="AccentColor" Color="#FF557F"/>


    <LinearGradientBrush x:Key="LoginWindowBackgroundGradient" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#ECE9E6" Offset="0.0"/>
        <GradientStop Color="#FFFFFF" Offset="0.1"/>
    </LinearGradientBrush>
</ResourceDictionary>